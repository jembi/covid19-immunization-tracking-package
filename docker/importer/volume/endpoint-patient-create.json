{
  "name": "FHIR - Covid-19 Patient Orchestrator",
  "description": "Endpoint to validate the incoming Covid-19 Patient payload, resolve the Patient then create or update the resource on HAPI-FHIR",
  "endpoint": {
    "pattern": "/patient-registration",
    "endpoint": "POST"
  },
  "transformation": {
    "input": "JSON",
    "output": "JSON"
  },
  "inputValidation": {},
  "inputMapping": {
    "requestBody": {
      "transform": {
        "function": "passThroughObject"
      }
    },
    "constants.opencr": "identifier[]+"
  },
  "requests": {
    "lookup": [
      {
        "id": "resolvePatient",
        "forwardExistingRequestBody": true,
        "config": {
          "method": "POST",
          "url": "http://opencr:3000/fhir/Patient",
          "headers": {
            "Content-Type": "application/json",
            "x-openhim-clientid": "test"
          }
        }
      }
    ],
    "response": [
      {
        "id": "hapi-fhir",
        "config": {
          "method": "POST",
          "url": "http://hapi-fhir:8080/fhir/Patient",
          "headers": {
            "Content-Type": "application/json"
          }
        }
      }
    ]
  },
  "constants": {
    "opencr":{
      "value": "testUID",
      "system": "http://instantopenhie.org/opencr"
    }
  }
}
